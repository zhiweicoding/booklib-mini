<block wx:if="{{$taroCompReady}}">
    <view class="container">
        <view class="fb-body">
            <textarea class="content" placeholder="对我们网站、宠物、服务，你还有什么建议吗？你还希望在优宠熊上买到什么宠物？请告诉我们..." bindinput="textareaInput"></textarea>
            <view class="text-count">0/500</view>
        </view>
        <view class="fb-mobile">
            <view class="label">手机号码</view>
            <view class="mobile-box">
                <input class="mobile" placeholder="方便我们与你联系" bindinput="mobileInput" />
                <image class="clear-icon" src="http://photo.youchongxiong.com/hxm%252Fyanxuan-wap%252Fp%252F20161201%252Fstyle%252Fimg%252Ficon-normal%252Fclear-fb-dd9d604f86.png"></image>
            </view>
        </view>
        <button class="fb-btn" bindtap="submitFeedback">提交</button>
    </view>
</block>