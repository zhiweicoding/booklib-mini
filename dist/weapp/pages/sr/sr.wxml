<block wx:if="{{$taroCompReady}}">
    <view class="container">
        <view class="search">
            <view class="search-head">
                <view class="{{'search-head-i ' + (switchType == 1 ? 'zong' : '')}}" bindtap="switchType" data-e-tap-so="this" data-e-tap-a-a="{{1}}">正文</view>
                <view class="{{'search-head-i ' + (switchType == 2 ? 'zong' : '')}}" bindtap="switchType" data-e-tap-so="this" data-e-tap-a-a="{{2}}">图片</view>
            </view>
            <view class="search-switch">
                <view class="search-switch-left">智能检索</view>
                <at-switch compid="{{$compid__1}}"></at-switch>
                <view class="search-switch-right">高阶检索</view>
            </view>
            <view class="search-msg">
                <block wx:if="{{!checkValue}}">
                    <input class="search-msg-sample" value="" placeholder="请输入检索内容" />
                </block>
                <block wx:if="{{checkValue}}">
                    <view class="search-msg-hight">
                        <view class="search-msg-hight-line">
                            <view class="search-msg-hight-line-l">{{switchType == 1 ? '正文' : '标题'}}</view>
                            <input class="search-msg-hight-line-r" value="" placeholder="{{'请输入' + (switchType == 1 ? '正文' : '标题')}}" />
                        </view>
                        <view class="search-msg-hight-line">
                            <view class="search-msg-hight-line-l">{{switchType == 1 ? '标题' : ' 简介'}}</view>
                            <input class="search-msg-hight-line-r" value="" placeholder="{{'请输入' + (switchType == 1 ? '标题' : '简介')}}" />
                        </view>
                        <view class="search-msg-hight-line">
                            <view class="search-msg-hight-line-l">作者</view>
                            <input class="search-msg-hight-line-r" value="" placeholder="请输入作者" />
                        </view>
                        <view class="search-msg-hight-line">
                            <view class="search-msg-hight-line-l">时间范围</view>
                            <view class="search-msg-hight-line-y">
                                <input class="search-msg-hight-line-y-d" value="" placeholder="起始年份" />
                                <view class="search-msg-hight-line-y-g">-</view>
                                <input type="number" class="search-msg-hight-line-y-d" value="" placeholder="终止年份" />
                            </view>
                        </view>
                    </view>
                </block>
                <button class="search-msg-btn">检索</button>
            </view>
            <block wx:if="{{searchHis.length > 0}}">
                <view class="search-his">
                    <view class="search-his-tit">检索记录</view>
                    <view class="search-his-msg">
                        <view class="search-his-msg-i" wx:for="{{searchHis}}" wx:for-item="item" wx:for-index="i">{{item}}</view>
                    </view>
                </view>
            </block>
        </view>
    </view>
</block>